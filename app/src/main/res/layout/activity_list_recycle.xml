<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:background="@drawable/custom_border"
    android:padding="10dp"
    tools:showIn="@layout/activity_new_list">

    <TextView
        android:id="@+id/tvRecycleName"
        android:layout_width="89dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:paddingEnd="10dp"
        android:text="Produto"
        android:textColor="@color/floatButton"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvRecycleLocal"
        android:layout_width="74dp"
        android:layout_height="19dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:paddingStart="8dp"
        android:text="Mercado"
        android:textColor="@color/product_name_simple"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/tvRecycleName"
        app:layout_constraintHorizontal_bias="0.133"
        app:layout_constraintStart_toStartOf="@+id/tvRecycleName"
        app:layout_constraintTop_toBottomOf="@+id/tvRecycleName" />

    <TextView
        android:id="@+id/tvRecycleBrand"
        android:layout_width="64dp"
        android:layout_height="19dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:paddingStart="8dp"
        android:text="Marca"
        android:textColor="@color/product_name_simple"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/tvRecycleLocal"
        app:layout_constraintTop_toTopOf="@+id/tvRecycleLocal" />

    <TextView
        android:id="@+id/tvRecycleRS"
        android:layout_width="44dp"
        android:layout_height="17dp"
        android:layout_marginStart="64dp"
        android:layout_weight="2"
        android:text="R$"
        android:textAlignment="center"
        android:textColor="@color/product_name_bold"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvRecycleName"
        app:layout_constraintTop_toTopOf="@+id/tvRecycleName"
        app:layout_constraintVertical_bias="0.062" />

    <TextView
        android:id="@+id/tvRecycleValue"
        android:layout_width="49dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:layout_weight="2"
        android:text="Valor"
        android:textAlignment="center"
        android:textColor="@color/product_name_bold"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvRecycleBrand"
        app:layout_constraintEnd_toEndOf="@+id/tvRecycleRS"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvRecycleRS"
        app:layout_constraintTop_toTopOf="@+id/tvRecycleRS"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="QTD"
        android:textAlignment="center"
        android:textColor="@color/product_name_bold"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.247"
        app:layout_constraintStart_toEndOf="@+id/tvRecycleRS"
        app:layout_constraintTop_toTopOf="@+id/tvRecycleName" />

    <EditText
        android:id="@+id/edRecycleQuantity"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/product_name_bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/textView6" />


</androidx.constraintlayout.widget.ConstraintLayout>